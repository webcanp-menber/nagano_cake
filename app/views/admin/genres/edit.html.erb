<div class="container">
  <div class="row">
    <mark class="bg-light">ジャンル編集</mark>
  </div>
  <table class="mt-3" style="width :70%">
    <tr>
      <td><strong>ジャンル名</strong></td>
      <td>
        <%= form_with model: @genre, url: admin_genre_path, method: :patch do |f| %>
        <%= f.text_field :genre, placeholder: "ジャンル名" %>
      </td>
      <td>
        <%= f.submit "変更を保存", class:"btn btn-success" %>
        <% end %>
      </td>
    </tr>
  </table>
</div>