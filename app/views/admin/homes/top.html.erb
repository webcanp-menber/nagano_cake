<div class="container">
  <div class="row">
    <mark class="bg-light">注文履歴一覧</mark>
  </div>
  <table class="table table-hover table-inverse">
    <thead class="table-light">
      <tr>
        <td><strong>購入日時</strong></td>
        <td><strong>購入者</strong></td>
        <td><strong>注文個数</strong></td>
        <td><strong>注文ステータス</strong></td>
      </tr>
    </thead>
    <tr>
      <% @orders.each do |order| %>
      <td>
        <%= link_to admin_order_path(order), class: "underline-link" do %>
        <%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
        <% end %>
      </td>
      <td><%= order.name %></td>
      <td><%= order.order_details.sum(:amount) %></td>
      <td><%= order.status_i18n %></td>
      </tr>
      <% end %>
    </th>
  </table>
  <div class="d-flex justify-content-center">
    <%= paginate @orders %>
  </div>
</div>