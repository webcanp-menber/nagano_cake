<h2>商品一覧</h2>

<%= link_to "+", new_admin_item_path %>

        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <td>商品ID</td>
              <td>商品名</td>
              <td>税抜価格</td>
            </tr>
          </thead>
          <tbody>
            <% @items.each do |item| %>
            <tr><%= item.id %>></tr>
            <tr>
              <td>
                <%= link_to admin_item_path(item.id) do %>
                  <%= item.name %>
                <% end %>
              </td>
              <td><%= item.price %></td>
            </tr>
            <% end %>
          </tbody>
        </table>