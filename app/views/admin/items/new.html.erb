<h3>商品新規登録</h3>

<%= form_with model: @item, url: admin_items_path do |f| %>

<table>
  <tbody>
    <tr>
      <th>商品画像</th>
      <th><%= f.file_field :image, accept: "image/*" %></th>
    </tr>
    <tr>
      <th>商品名</th>
      <th><%= f.text_field :name %></th>
    </tr>
    <tr>
      <th>商品説明</th>
      <th><%= f.text_field :introduction %></th>
    </tr>
    <tr>
      <th>税抜価格</th>
      <th><%= f.text_field :price %>円</th>
    </tr>
  </tbody>
</table>

<%= f.submit "新規登録" %>

<% end %>