<div class="container">
  <div class="row">
    <mark class="bg-light">商品詳細</mark>
  </div>
  <div class="row mt-5">
    <div class="col-4">
      <%= image_tag @item.get_image %>
    </div>
    <div class="col-8">
      <table>
        <tr>
          <td>商品名</td>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <td>ジャンル</td>
          <td><%= @item.genre.genre %></td>
        </tr>
        <tr>
          <td>税込価格</br>（税抜価格）</td>
          <td><%= (@item.price*1.1).floor %>(<%= @item.price %>)円</td>
        </tr>
        <tr>
          <td>販売ステータス</td>
          <td>
            <% if @item.status == true %>
              <strong class="text-success">販売中</strong>
            <% else %>
              <strong class="text-secondary">販売停止中</strong>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  <div class="centered-btn mt-5">
    <%= link_to "編集する", edit_admin_item_path, class:"btn btn-success btn-long" %>
  </div>
</div>