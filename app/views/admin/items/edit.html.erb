<h2>商品編集</h2>

<%= form_with model: @item, url: admin_item_path do |f| %>

<table>
  <tbody>
        <tr>
          <td>商品名</td>
          <td><%= f.text_field :name %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= f.text_field :introduction %></td>
        </tr>
        <tr>
          <td>税込価格</td>
          <td><%= f.text_field :price %>円</td>
        </tr>
      </tbody>
</table>

<%= f.submit "編集内容を保存" %>

<% end %>