<div class="container">
  <% if @customer.errors.any? %>
    <%= @customer.errors.count %>件のエラーが発生しました
    <ul>
    <% @customer.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
    </ul>
  <% end %>
  <div class="row">
    <mark class="bg-light"><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</mark>
  </div>
  <%= form_with model: @customer, url: admin_customer_path do |f| %>
  <table class="mt-5">
    <tr>
      <td>会員ID</td>
      <td>　　</td>
      <td><%= @customer.id %></td>
    </tr>
    <tr>
      <td>氏名</td>
      <td>　　</td>
      <td><%= f.text_field :last_name %>　　<%= f.text_field :first_name %></td>
    </tr>
    <tr>
      <td>フリガナ</td>
      <td>　　</td>
      <td><%= f.text_field :last_name_kana %>　　<%= f.text_field :first_name_kana %></td>
    </tr>
    <tr>
      <td>郵便番号</td>
      <td>　　</td>
      <td><%= f.text_field :postal_code %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td>　　</td>
      <td><%= f.text_field :address, size: 50 %></td>
    </tr>
    <tr>
      <td>電話番号</td>
      <td>　　</td>
      <td><%= f.text_field :telephone_number %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td>　　</td>
      <td><%= f.email_field :email %></td>
    </tr>
    <tr>
      <td>会員ステータス</td>
      <td>　　</td>
      <td>
        <div style="display: flex; align-items: center;">
          <%= f.radio_button :is_active, "true" %><%= f.label :is_active_true, "有効" %>　
          <%= f.radio_button :is_active, "false" %><%= f.label :is_active_false, "退会" %>
        </div>
      </td>
    </tr>
    <tr>
      <td></td>
      <td>　　</td>
      <td><%= f.submit "変更を保存", class:"btn btn-success btn-long" %></td>
    </tr>
  </table>
  <% end %>
</div>