<h5><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h5>

<%= form_with model: @customer, url: admin_customer_path do |f| %>

<table>
  <tbody>
    <tr>
      <th>会員ID</th>
      <th><%= @customer.id %></th>
    </tr>
    <tr>
      <th>氏名</th>
      <th><%= f.text_field :last_name %><%= f.text_field :first_name %></th>
    </tr>
    <tr>
      <th>フリガナ</th>
      <th><%= f.text_field :last_name_kana %><%= f.text_field :first_name_kana %></th>
    </tr>
    <tr>
      <th>郵便番号</th>
      <th><%= f.text_field :postal_code %></th>
    </tr>
    <tr>
      <th>住所</th>
      <th><%= f.text_field :address %></th>
    </tr>
    <tr>
      <th>電話番号</th>
      <th><%= f.text_field :telephone_number %></th>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <th><%= f.email_field :email %></th>
    </tr>
    <tr>
      <th>会員ステータス</th>
      <th>
        <%= f.radio_button :is_active, "true" %><%= f.label :is_active_true, "有効" %>
        <%= f.radio_button :is_active, "false" %><%= f.label :is_active_false, "退会" %>
      </th>
    </tr>
  </tbody>
</table>

<%= f.submit "編集内容を保存" %>

<% end %>