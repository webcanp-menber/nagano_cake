<h2>会員一覧</h2>

<table class="table table-hover table-inverse">
          <thead>
            <tr>
              <td>会員ID</td>
              <td>氏名</td>
              <td>メールアドレス</td>
              <td>ステータス</td>
            </tr>
          </thead>
          <tbody>
            <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td>
                <%= link_to admin_customer_path(customer.id) do %>
                  <%= customer.last_name %><%= customer.first_name %>
                <% end %>
              </td>
              <td><%= customer.email %></td>
              <td>
                <% if customer.is_active == true %>
                  有効
                <% else %>
                  退会
                <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>