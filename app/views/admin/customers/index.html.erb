<div class="container">
  <div class="row">
    <mark class="bg-light">会員一覧</mark>
  </div>
  <table class="table table-hover table-inverse">
    <thead class="table-light">
      <tr>
        <td><strong>会員ID</strong></td>
        <td><strong>氏名</strong></td>
        <td><strong>メールアドレス</strong></td>
        <td><strong>ステータス</strong></td>
      </tr>
    </thead>
    <% @customers.each do |customer| %>
    <tr>
      <td><%= customer.id %></td>
      <td><%= link_to admin_customer_path(customer.id), class: "underline-link" do %>
          <%= customer.last_name %><%= customer.first_name %>
          <% end %>
      </td>
      <td><%= customer.email %></td>
      <td>
        <% if customer.is_active == true %>
          <p class="fw-bold text-success">有効</p>
        <% else %>
          <p class="fw-bold text-muted">退会</p>
        <% end %>
      </td>
    </tr>
      <% end %>
  </table>
  <div class="d-flex justify-content-center">
    <%= paginate @customers %>
  </div>
</div>