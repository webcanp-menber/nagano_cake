<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg">
        <div class="container">
          <h1>LOGO</h1>
          <ul class="navbar-nav ml-auto flex-row">
            <% if admin_signed_in? %>
              <li class="nav-item"><%= link_to "商品一覧", about_path %></li>
              <li class="nav-item"><%= link_to "会員一覧", about_path %></li>
              <li class="nav-item"><%= link_to "注文履歴一覧", about_path %></li>
              <li class="nav-item"><%= link_to "ジャンル一覧", customer_session_path %></li>
              <li class="nav-item"><%= link_to "ログアウト", customer_session_path %></li>
            <% elsif customer_signed_in? %>
              <li class="nav-item"><%= link_to "About", about_path %></li>
              <li class="nav-item"><%= link_to "商品一覧", about_path %></li>
              <li class="nav-item"><%= link_to "新規登録", about_path %></li>
              <li class="nav-item"><%= link_to "ログイン", customer_session_path %></li>
            <% else %>
              <li class="nav-item"><%= link_to "About", about_path %></li>
              <li class="nav-item"><%= link_to "商品一覧", about_path %></li>
              <li class="nav-item"><%= link_to "新規登録", about_path %></li>
              <li class="nav-item"><%= link_to "ログイン", customer_session_path %></li>
            <% end %>
          </ul>
        </div>
      </nav>

      <nav></nav>
    </header>
    <%= yield %>
    <footer>

    </footer>
  </body>
</html>
