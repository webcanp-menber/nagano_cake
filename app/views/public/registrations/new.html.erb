<div class="container">
  <div class="row">
    <mark class="bg-light">新規会員登録</mark>
  </div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  <table>
    <tr>
      <td><%= f.label :"名前" %></td>
      <td><%= f.label :"(姓)" %></td>
      <td>
        <%= f.text_field :last_name, autofocus: true, placeholder: "令和" %>
        　　<%= f.label :"(名)" %>　<%= f.text_field :first_name, autofocus: true, placeholder: "道子" %>
      </td>
    </tr>
    <tr>
      <td><%= f.label :"フリガナ" %></td>
      <td><%= f.label :"(セイ)" %></td>
      <td>
        <%= f.text_field :last_name_kana, autofocus: true, placeholder: "レイワ" %>
        　　<%= f.label :"(メイ)" %><%= f.text_field :first_name_kana, autofocus: true, placeholder: "ミチコ" %>
      </td>
    </tr>
    <tr>
      <td><%= f.label :"メールアドレス" %></td>
      <td></td>
      <td><%= f.email_field :email, autofocus: true, placeholder: "sample@example.com" %></td>
    </tr>
    <tr>
      <td><%= f.label :"郵便番号（ハイフンなし）" %></td>
      <td></td>
      <td><%= f.text_field :postal_code, autofocus: true, placeholder: "0000000" %></td>
    </tr>
    <tr>
      <td><%= f.label :"住所" %></td>
      <td></td>
      <td><%= f.text_field :address, autofocus: true, placeholder: "東京都渋谷区代々木神園町0-0", size: 47 %></td>
    </tr>
    <tr>
      <td><%= f.label :"電話番号（ハイフンなし）" %></td>
      <td></td>
      <td><%= f.text_field :telephone_number, autofocus: true, placeholder: "00000000000" %></td>
    </tr>
    <tr>
      <td><%= f.label :パスワード（６文字以上） %></td>
      <td></td>
      <td><%= f.password_field :password, autocomplete: "new-password" %></td>
    </tr>
    <tr>
      <td><%= f.label :パスワード（確認用） %></td>
      <td></td>
      <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
    </tr>
    <tr>
      <td></td>
      <td></td>
      <td>
        <input class="btn btn-success btn-long" type="submit" value="新規登録">
      </td>
    </tr>
  </table>
  <% end %>

  <div class="row">
    <mark class="bg-light">既に登録済みの方</mark>
  </div>
  <p><%= link_to "こちら", new_customer_session_path, class: "underline-link-a" %> からログインしてください。</p>

</div>