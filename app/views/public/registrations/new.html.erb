<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :"名前" %>
    <%= f.label :"(姓)" %><%= f.text_field :last_name, autofocus: true %>
    <%= f.label :"(名)" %><%= f.text_field :first_name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :"フリガナ" %>
    <%= f.label :"(セイ)" %><%= f.text_field :last_name_kana, autofocus: true %>
    <%= f.label :"(メイ)" %><%= f.text_field :first_name_kana, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :"メールアドレス" %>
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :"郵便番号（ハイフンなし）" %>
    <%= f.text_field :postal_code, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :"住所" %>
    <%= f.text_field :address, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :"電話番号（ハイフンなし）" %>
    <%= f.text_field :telephone_number, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :パスワード（６文字以上） %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード（確認用） %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<p>既に登録済みの方</p>
<p><%= link_to "こちら", new_customer_session_path %> からログインしてください。</p>

