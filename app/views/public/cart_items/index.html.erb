<div>
<h2>ショッピングカート</h2>
<!--<a class="btn btn-sm btn-danger">-->
<!--<%= link_to "カートを空にする", cart_items_destroy_all_path, method: :delete %></a>-->
<!--</div>-->
<table>
  <th>
    <tr>
      <td>商品名</td>
      <td>単価（税込）</td>
      <td>数量</td>
      <td>小計</td>
      <td></td>
    </tr>
    <tr>
      <% @cart_items.each do |cart_item| %>
                <td>
                  <%= image_tag @items.find(cart_item.item_id).get_image %>
                  <%= @items.find(cart_item.item_id).name %>
                </td>
                <td><%= @items.find(cart_item.item_id).price %></td>
                <td><%= cart_item.amount %></td>
                <td><%= @items.find(cart_item.item_id).price*cart_item.amount %></td>
                <!--<td><%= link_to "削除する", cart_item_path(cart_item), method: :delete %></td>-->
            </tr>
            <% end %>
  </th>
</table>
