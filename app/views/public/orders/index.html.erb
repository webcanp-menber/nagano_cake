<h4>注文履歴一覧</h4>

<table>
  <th>
    <tr>
      <td>注文日</td>
      <td>配送先</td>
      <td>注文商品</td>
      <td>支払金額</td>
      <td>注文詳細</td>
    </tr>
  </th>
  <% @orders.each do |order| %>
    <tr>
      <td><%= order.created_at %></td>
      <td>
        〒<%= order.postal_code %></br>
        <%= order.address %></br>
        <%= order.name %></br>
      </td>
      <td><% order.order_details.each do |order_detail| %>
            <%= @item_names[order_detail.id] %><br>
          <% end %></td>
      <td><%= order.total_payment %>円</td>
      <td><%= link_to "注文詳細", order_path(order.id) %></td>
    </tr>
  <% end %>
</table>