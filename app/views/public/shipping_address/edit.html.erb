<div class="container">
  <div class="row">
    <mark class="bg-light">配送先編集</mark>
  </div>

  <table class="mt-3" style="width :80%">
    <tr>
      <td>郵便番号（ハイフンなし）</td>
      <td>　</td>
      <td>
        <%= form_with model: @s_address, url: shipping_address_path, method: :patch do |f| %>
        <%= f.text_field :postal_code, placeholder: "0000000" %>
      </td>
      <td></td>
    </tr>
    <tr>
      <td>住所</td>
      <td>　</td>
      <td><%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", size: 50 %></td>
      <td></td>
    </tr>
    <tr>
      <td>宛名</td>
      <td>　</td>
      <td><%= f.text_field :name, placeholder: "令和道子" %></td>
      <td>
        <%= f.submit "変更内容を保存", class:"btn btn-success" %>
        <% end %>
      </td>
    </tr>
  </table>
</div>